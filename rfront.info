core = 7.x

screenshot = img/screenshot.png


; THEME SETTINGS
; ***************************************************************************

features[] = name
features[] = favicon


; CSS
; ***************************************************************************

stylesheets[all][] = css/reset.css
stylesheets[all][] = css/styles.css
stylesheets[all][] = js/colorbox/colorbox.css


; JAVASCRIPT
; ***************************************************************************

scripts[] = js/scripts.js
