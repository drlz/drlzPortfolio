; REGIONS
; ***************************************************************************

regions[page_top] = Page top
regions[header] = Header
regions[help] = Help
regions[highlighted] = Highlighted content
regions[content] = Main content
regions[sidebar_first] = Sidebar
regions[footer] = Footer
regions[page_bottom] = Page bottom

